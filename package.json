{
  "name": "now-ui-kit-react",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "moment": "2.24.0",
    "node-sass": "4.12.0",
    "nouislider": "14.0.2",
    "react": "16.8.6",
    "react-bootstrap-switch": "15.5.3",
    "react-countdown-now": "^2.1.2",
    "react-datetime": "2.16.3",
    "react-dom": "16.8.6",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.0.1",
    "reactstrap": "8.0.1"
  },
  "scripts": {
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install && npm start",
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "test": "start-server-and-test start http://localhost:3000 test:e2e",
    "test:e2e": "cypress run --env coverage=true",
    "test:coverage": "nyc report --reporter=text-summary",
    "test:react": "react-scripts test --coverage",
    "eject": "react-scripts eject",
    "compile-sass": "node-sass src/assets/scss/now-ui-kit.scss src/assets/css/now-ui-kit.css",
    "minify-sass": "node-sass src/assets/scss/now-ui-kit.scss src/assets/css/now-ui-kit.min.css --output-style compressed",
    "map-sass": "node-sass src/assets/scss/now-ui-kit.scss src/assets/css/now-ui-kit.css --source-map true"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "optionalDependencies": {
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^1.10.1",
    "@cypress/instrument-cra": "^1.0.0",
    "cypress": "^3.6.1",
    "istanbul-lib-coverage": "^2.0.5",
    "nyc": "^14.1.1",
    "start-server-and-test": "^1.10.6"
  },
  "nyc": {
    "report-dir": "cypress-coverage"
  }
}
